<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               x:Class="Content.SIS.Client.Respawn.UI.RespawnWindow"
               Title="{Loc 'ghost-respawn-title'}"
               MinSize="500 300"
               SetSize="500 300">
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True"
                  SeparationOverride="10">
        <RichTextLabel Name="TopBanner"
                       VerticalExpand="True"
                       Margin="10 10 10 10"
                       Text="{Loc 'ghost-respawn-window-test'}" />
        <Button Name="RequestButton"
                Text="{Loc 'ghost-respawn-request-role-button'}"
                Disabled="True"
                TextAlign="Center"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
    </BoxContainer>
</DefaultWindow>
